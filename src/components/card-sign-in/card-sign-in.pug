include ~components/text-field/text-field
include ~components/button/button

mixin card-sign-in()
  .card-sign-in
    .card-sign-in__content
      h1.card-sign-in__title
        | Войти
      form.card-sign-in__form
        .card-sign-in__email
          +text-field(
            {
              title: "", 
              placeholder: "Email", 
              type: "email",
              name: "email-input",
              required: true

            }
          )
        .card-sign-in__password
          +text-field(
            {
              title: "", 
              placeholder: "Пароль", 
              type: "password",
              name: "password-input",
              required: true,
            }
          )
        .card-sign-in__button
          +button({
            type: 'submit',
            modifiers: 'button_big button_with-icon',
            text: 'Войти'
          })
        .card-sign-in__check-in 
          span.card-sign-in__check-in-text
            | Нет аккаунта на Toxin?
          +button({
            type: 'link',
            href: 'registration.html',
            modifiers: 'button_white',
            text: 'Создать'
          })