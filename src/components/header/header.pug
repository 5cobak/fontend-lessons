mixin header({routes, isEntered})
  header.header.js-header
    .header__container
      .header__content
        a(href="index.html").header__logo-link
          svg(class="logo logo_colored" aria-label="toxin logo")
            use(xlink:href="#logo-colored")
        nav.header__nav.js-header__nav
          ul.header__list
            each route in routes
              li.header__list-item
                a.header__link(href="/mock-address/change-me" class=`${route.active ? 'header__link_active' : ''} ${route.dropdown ? 'header__link_dropping-out' : ''}`)
                  | #{route.text}
          if !isEntered
            .header__buttons
              span.header__button-wrap
                a(href="sign-in.html").button.button_white.button_small
                  | Войти
              a(href="registration.html").button.button_small
                | Зарегистрироваться
          else 
            a(href="/mock-address/change-me").header__cabinet
              | Юлий Цезарь
        .header__nav-shadow.js-header__nav-shadow
        button(type="button" aria-label="menu").header__burger.js-header__burger
          .header__burger-layout.js-header__burger-layout  