extends ../main

include ../../components/text-field/text-field.pug
include ../../components/masked-text-field/masked-text-field.pug
include ../../components/dropdown-choose/dropdown-choose.pug
include ../../components/date-dropdown/date-dropdown.pug
include ../../components/filter-date/filter-date.pug
include ../../components/subscription/subscription.pug
include ../../components/expand-list/expand-list.pug
include ../../components/checkbox-buttons/checkbox-buttons.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/toggle-buttons/toggle-buttons.pug
include ../../components/like-button/like-button
include ../../components/rate-buttons/rate-buttons
include ../../components/range-slider/range-slider
include ../../components/pagination/pagination
include ../../components/rich-list/rich-list
include ../../components/bullet-list/bullet-list
include ../../components/advantages/advantages
include ../../components/review/review
include ../../components/card-room/card-room

block head
  link(rel="apple-touch-icon" sizes="180x180" href="assets/favicons/apple-touch-icon.png")
  link(rel="icon" type="image/png" sizes="32x32" href="assets/favicons/favicon-32x32.png")
  link(rel="icon" type="image/png" sizes="16x16" href="assets/favicons/favicon-16x16.png")
  link(rel="manifest" href="assets/favicons/site.webmanifest")
block content
  svg.logo.logo_gray(role="image" aria-label="toxin-logo")
    use(xlink:href="#logo-gray")
  main.form-elements
    .container
        .row
          .form-elements__first-row
            .col
              +text-field(
                {
                  title: "text field", 
                  placeholder: "Email", 
                  type: "email", 
                  required: true
                }
              )
              +masked-text-field(
                {
                  title: "masked text field",
                  placeholder: "ДД.ММ.ГГГГ", 
                  type: "text", 
                  className: "js-date-masked"
                }
              )
              span.block-title dropdown
              +dropdown-choose({className: "js-dropdown-guests", title:"dropdown"})
              +date-dropdown({classNameFirstInput: "js-date-masked js-date-dropdown__input", 
              classNameSecondInput: "js-date-masked",
              title: "date dropdown", 
              titleSecond: "date dropdown"})
              span.block-title filter date dropdown
              +filter-date({className: "js-filter-date", title: "filter date dropdown"})
              +subscription({title: "subscription", placeholder: "Email"})
              span.block-title dropdown
              +dropdown-choose({className: "js-dropdown-beds", title: "dropdown"})
              +expand-list({
                title: "expandable checkbox list",
                className: "js-expand-list",
                items: [
                  "Завтрак",
                  "Письменный стол",
                  "Стул для кормления",
                  "Кроватка",
                  "Телевизор",
                  "Шампунь",
                ]
               })

            .col
              +checkbox-buttons({
                title: "checkbox buttons",
                items: [
                  "Можно курить",
                  "Можно с питомцами",
                  "Можно пригласить гостей (до 10 человек)",
                ]
                })
              span.block-title.block-title_margin-b-16 radio button
              +radio-buttons({title: "radio buttons"})
              span.block-title.block-title_margin-b-16 toggle
              +toggle-buttons()
              .block-title.block-title_margin-b-16 like buttons
              +like-button({className: "", count: 0})
              .block-title.block-title_margin-b-16 rate button
              +rate-buttons({rate: 3})
              +rich-list({
                title: "rich checkbox buttons",
                items: [
                  {
                    title: "Широкий коридор",
                    description: "Ширина коридоров в номере не менее 91 см."
                  },
                  {
                    title: "Помощник для инвалидов",
                    description: "На 1 этаже вас встретит специалист  и проводит до номера."
                  }
                ]
              })
            .col
              +range-slider({title: "range slider", interval: "5000₽ - 10000₽"})
              .block-title.block-title_margin-b-16 buttons
              br
              a(href="/mock-adress/").button click me
              br
              br 
              a(href="/mock-adress/").button.button_white click me
              br
              br
              a(href="/mock-adress/").button.button_no-bg click me
              br
              br
              button(type="submit").button.button_big перейти к оплате
              br
              .block-title.block-title_margin-b-16 pagination
              br
              +pagination()
              +bullet-list({
                title: "bullet list",
                items: [
                  "Нельзя с питомцами",
                  "Без вечеринок и мероприятий",
                  "Время прибытия — после 13:00, а выезд до 12:00",
                ]
              })
          .row
            .form-elements__last-row
              .col
                +advantages({items: [
                  {
                    title: "Комфорт",
                    description: "Шумопоглощающие стены",
                    href: "#insert-emoticon"
                  },
                  {
                    title: "Удобство",
                    description: "Окно в каждой из спален",
                    href: "#location-city"
                  },

                ]})
              .col
                +review({
                  src: "images/maga.png",
                  name: "Мурад Сарафанов",
                  date: "5 дней назад",
                  text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. \nИ стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто\nне жаловался из соседей.",
                  like: 11
                })

block script
  script
