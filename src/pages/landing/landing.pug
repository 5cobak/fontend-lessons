extends ../main

include ../../components/header/header
include ../../components/footer/footer
include ../../components/subscription/subscription
include ../../components/card-selection/card-selection
include ../../components/date-dropdown/date-dropdown
include ../../components/dropdown-choose/dropdown-choose

block head
  link(rel='apple-touch-icon' sizes='180x180' href='assets/favicons/apple-touch-icon.png')
  link(rel='icon' type='image/png' sizes='32x32' href='assets/favicons/favicon-32x32.png')
  link(rel='icon' type='image/png' sizes='16x16' href='assets/favicons/favicon-16x16.png')
  link(rel='manifest' href='assets/favicons/site.webmanifest')
  link(rel='mask-icon' href='assets/favicons/safari-pinned-tab.svg' color='#5bbad5')
  meta(name='msapplication-TileColor' content='#da532c')
  meta(name='theme-color' content='#ffffff')

block content
  +header({routes: [
            {
              text: 'О нас',
              active: false,
              href: '/mock-address/change-me'
            },
            {
              text: 'Услуги',
              active: false,
              href: '/mock-address/change-me',
              dropdown: true
            },
            {
              text: 'Вакансии',
              active: false,
              href: '/mock-address/change-me'
            },
            {
              text: 'Новости',
              active: false,
              href: '/mock-address/change-me'
            },
            {
              text: 'Соглашения',
              active: false,
              href: '/mock-address/change-me',
              dropdown: true
            },
          ],isEntered: false})
  .content
    .landing-page
      .landing-page__container
        main.landing-page__main
          +card-selection()
      .container
        p.landing-page__description
          | Лучшие номера для вашей работы,
          | отдыха и просто вдохновения
  +footer()

