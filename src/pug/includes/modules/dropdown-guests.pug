mixin dropdown-guests(title,className)
	span.title-element #{title}
	.iqdropdown(class=className)
		p.iqdropdown-selection(data-seletion-text="гость" data-text-plural="")
		svg.icon-dropdown.expand-more
			use(xlink:href="#expand_more")
		.iqdropdown-menu
			.iqdropdown-menu-option(data-id="item1" data-defaultcount="0" data-mincount="0" data-maxcount="10")
				div
					p.iqdropdown-item Взрослые 
			.iqdropdown-menu-option(data-id="item2" data-defaultcount="0" data-mincount="0" data-maxcount="10")
				div
					p.iqdropdown-item Дети 
			.iqdropdown-menu-option(data-id="item3" data-defaultcount="0" data-mincount="0" data-maxcount="10")
				div
					p.iqdropdown-item Младенцы 
			.buttons-actions
				button.buttons-actions__clean-off Отчистить
				button.buttons-actions__apply Применить
